# Copy to .env for local development. Never commit .env.
# In production (docker-compose.prod.yml) use the root .env instead.

NODE_ENV=development
PORT=3001

# PostgreSQL (local dev)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=microsight
DB_USER=postgres
DB_PASSWORD=postgres

# Redis (local dev)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=   # Leave blank for local Redis without auth

# JWT secrets — generate with: openssl rand -hex 32
JWT_ACCESS_SECRET=change_me_at_least_32_random_chars
JWT_REFRESH_SECRET=change_me_at_least_32_random_chars

# Google OAuth — create credentials at https://console.cloud.google.com
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Frontend origin (must match Vite dev server)
FRONTEND_URL=http://localhost:5173
